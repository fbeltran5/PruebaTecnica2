@model TaskManager.Models.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>¿Seguro que quieres eliminar la tarea?</h3>
    <div>
        <strong>Título:</strong> @Model.Title
    </div>
    <div>
        <strong>Descripción:</strong> @Model.Description
    </div>
    <div>
        <strong>Categoría:</strong> @Model.Category?.Name
    </div>
    <div>
        <strong>Prioridad:</strong> @Model.Priority
    </div>
    <div>
        <strong>Estado:</strong> @(Model.IsCompleted ? "Completada" : "Pendiente")
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancelar</a>
</form>
